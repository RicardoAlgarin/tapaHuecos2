<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_post"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sine.tapahuevos2.PostActivity"
    android:scrollbarAlwaysDrawHorizontalTrack="false"
    android:scrollbarAlwaysDrawVerticalTrack="false">

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content" app:srcCompat="@mipmap/add_btn"
        android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
        android:id="@+id/take_photo_capture" android:background="@android:color/white"
        android:adjustViewBounds="true" android:scaleType="centerCrop" android:maxHeight="300dp"
        android:nestedScrollingEnabled="true"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/take_photo_capture" android:layout_centerHorizontal="true"
        android:id="@+id/titleField_photo" android:hint="Titulo de tu publicación"
        android:layout_marginLeft="20dp" android:layout_marginTop="20dp"
        android:layout_marginRight="20dp" android:padding="10dp" android:singleLine="true"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/descField_photo" android:layout_below="@+id/titleField_photo"
        android:layout_centerHorizontal="true" android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
        android:hint="Añadir un comentario..." android:padding="15dp" android:singleLine="true"
        android:cursorVisible="true" android:layout_marginBottom="10dp"/>
    <Button
        android:text="Compartir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" android:id="@+id/submitBtn_photo"
        android:background="@color/colorPrimary" android:textColor="@android:color/white"/>
    <Button
        android:text="Ubicación"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/localitation_btn_takephoto"
        android:layout_below="@+id/descField_photo" android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>
    <TextView
        android:text="Longitud:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lng_texview_take_photo"
        android:layout_alignBaseline="@+id/lat_texview_take_photo"
        android:layout_alignBottom="@+id/lat_texview_take_photo"
        android:layout_toEndOf="@+id/localitation_btn_takephoto"/>
    <TextView
        android:text="Latitud: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lat_texview_take_photo"
        android:layout_below="@+id/localitation_btn_takephoto"
        android:layout_toStartOf="@+id/localitation_btn_takephoto"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp" app:srcCompat="@drawable/mark"
        android:layout_above="@+id/submitBtn_photo" android:layout_centerHorizontal="true"
        android:id="@+id/imageView2"/>


</RelativeLayout>
