<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="20dp">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:id="@+id/post_title" android:text="Titulo de la publicación"
                  android:padding="10dp" android:textSize="16dp" android:textStyle="normal|bold"/>
        <ImageView android:layout_width="match_parent" android:layout_height="wrap_content"
                   android:id="@+id/post_image" android:adjustViewBounds="true"
                   app:srcCompat="@mipmap/add_btn" android:scaleType="centerCrop"/>
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:id="@+id/post_desc"
                  tools:text="Descripción de tu publicacion"
                  android:paddingBottom="10dp" android:paddingLeft="10dp"
                  android:paddingRight="10dp" android:padding="15dp"/> </LinearLayout>
